@model SequenceCalculator.Models.CalculatorModel

@{
    ViewBag.Title = "Home Page";
}

@using (Html.BeginForm("Calculate", "Calculator", FormMethod.Post))
{

    <div class="editor-label">
        @Html.LabelFor(m => m.number,"Please enter positive number")
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(m => m.number)
        @Html.ValidationMessageFor(m => m.number)
    </div>
    <input id="submit" type="submit" value="Calculate" />
} 